@{ 
    ViewData["Title"] = "Search Twitter Account";
}

    <h2>@ViewData["Title"]</h2>
    
    <p class="lead">Please enter the screen name of the twitter account only.</p>

    <form asp-controller="TwitterAccount" asp-action="GetTwitterAccount" method="get" class="form-inline">
        <div class="form-group">
            <div>
                <input name="screenName" class="form-control" placeholder="ScreenName">
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>
    </form>